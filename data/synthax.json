{
	"CONFIG": {
		"comment": "Config is a place where we store language settings",

		"name": "Calculator",
		"main": "P_SIMPLE_OR_SCOPE",
		"version": "0.1",
		"prepend_with": "(",
		"append_with": ")"
	},
	"SYNTHAX": {
		"comment": "Synthax contains PHRASES/WORDS/SYLLABLES/LETTERS",

		"PHRASES": {
			"comment": "Phrases consist of and/or sequences of phrases/words",

			"P_SIMPLE_OR_SCOPE": {
				"or": ["P_SCOPE", "P_SIMPLE"],
				"call": true
			},
			"P_SIMPLE": {
				"or+": ["P_OPERAND_PHRASE", "P_AND_MORE"],
				"call": true
			},
			"P_AND_MORE": {
				"and": ["W_OPERATOR", "P_SIMPLE"],
				"call": true
			},
			"P_OPERAND_PHRASE": {
				"or": ["P_OPERAND", "P_SCOPE", "P_SIMPLE"],
				"call": true
			},
			"P_OPERAND": {
				"or": ["W_FLOAT", "W_INT"],
				"call": true
			},
			"P_SCOPE": {
				"and": ["W_SCOPE_OPEN", "P_SIMPLE", "W_SCOPE_CLOSE"],
				"call": true
			}
		},
		"WORDS": {
			"comment": "Words are collected by lexor, consist of syllables",

			"W_OPERATOR":{
				"syllables": ["S_OPERATOR"],
				"call": true
			},
			"W_FLOAT": {
				"syllables": ["S_DIGITS", "S_DOT", "S_DIGITS"],
				"call": true
			},
			"W_INT": {
				"syllables": ["S_DIGITS"],
				"call": true
			},
			"W_SCOPE_OPEN": {
				"syllables": ["S_SCOPE_OPEN"],
				"call": true
			},
			"W_SCOPE_CLOSE": {
				"syllables": ["S_SCOPE_CLOSE"],
				"call": true
			}
		},
		"SYLLABLES": {
			"comment": "Syllables are sequences of letters within max length",

			"S_DOT": {
				"letters": "L_DOT",
				"max": 1
			},
			"S_OPERATOR": {
				"letters": "L_OPERATOR",
				"max": 1
			},
			"S_DIGITS": {
				"letters": "L_DIGIT",
				"max": 5
			},
			"S_SCOPE_OPEN": {
				"letters": "L_SCOPE_OPEN",
				"max": 1
			},
			"S_SCOPE_CLOSE": {
				"letters": "L_SCOPE_CLOSE",
				"max": 1
			}
		},
		"LETTERS": {
			"comment": "Letters are sets of characters",

			"L_DIGIT": "0123456789",
			"L_OPERATOR": "-+/*",
			"L_DOT": ".",
			"L_SCOPE_OPEN": "(",
			"L_SCOPE_CLOSE": ")"
		}
	}
}